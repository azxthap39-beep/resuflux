{
  "manifest_version": 3,
  "name": "ResuFlux",
  "version": "1.1",
  "description": "Scrape Job Descriptions and Score Resumes consistently.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open ResuFlux"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}